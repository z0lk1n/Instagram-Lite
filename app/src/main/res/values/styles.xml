<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    //AppBarLayout
    <style name="appBarLayoutStyle" parent="@style/Widget.Design.AppBarLayout">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="appBarLayoutStyle.Light">
        <item name="backgroundTint">@color/colorLightThemePrimary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <style name="appBarLayoutStyle.Dark">  
        <item name="backgroundTint">@color/colorDarkThemePrimary</item>
    </style>

    //FloatingActionButton
    <style name="fabStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>
    <style name="fabStyle.Light">
        <item name="backgroundTint">@color/colorLightThemeAccent</item>
    </style>
    <style name="fabStyle.Dark">
        <item name="backgroundTint">@color/colorDarkThemeAccent</item>
    </style>

    //TabLayout
    <style name="tabLayoutStyle" parent="@style/Widget.MaterialComponents.TabLayout"/>
    <style name="tabLayoutStyle.Light">
        <item name="tabBackground">@color/colorLightThemePrimary</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@color/colorLightThemeAccent</item>
    </style>
    <style name="tabLayoutStyle.Dark">
        <item name="tabBackground">@color/colorDarkThemePrimary</item>
        <item name="tabTextColor">@color/color_light</item>
        <item name="tabSelectedTextColor">@color/colorDarkThemeAccent</item>
    </style>

    //BottomNavigationView
    <style name="bottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bnv_color_selector_standard</item>
        <item name="itemTextColor">@color/bnv_color_selector_standard</item>
    </style>
    <style name="bottomNavigationViewStyle.Light">
        <item name="android:backgroundTint">@color/colorLightThemePrimary</item>
        <item name="itemIconTint">@color/bnv_color_selector_light</item>
        <item name="itemTextColor">@color/bnv_color_selector_light</item>
    </style>
    <style name="bottomNavigationViewStyle.Dark">
        <item name="android:backgroundTint">@color/colorDarkThemePrimary</item>
        <item name="itemIconTint">@color/bnv_color_selector_dark</item>
        <item name="itemTextColor">@color/bnv_color_selector_dark</item>
    </style>
</resources>